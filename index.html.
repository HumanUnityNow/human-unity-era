<script>
const c=document.getElementById('n'),x=c.getContext('2d');
const fit=()=>{const r=c.parentElement.getBoundingClientRect();c.width=r.width;c.height=r.height};
addEventListener('resize',fit,{passive:true});fit();
(function loop(){
  const w=c.width,h=c.height,im=x.createImageData(w,h),d=im.data;
  for(let i=0;i<d.length;i+=4){const v=(Math.random()*255)|0;d[i]=d[i+1]=d[i+2]=v;d[i+3]=215}
  x.putImageData(im,0,0);
  if(Math.random()<.3){const y=(Math.random()*h)|0;x.fillStyle='rgba(255,255,255,.12)';x.fillRect(0,y,w,2)}
  requestAnimationFrame(loop);
})();
</script>
